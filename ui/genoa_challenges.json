{
  "namespace": "genoa_challenges",

  "challenges_overlay@genoa_common.genoa_base_screen": {
    "$screen_content": "genoa_challenges.challenges_content",
    "$screen_background_texture": "textures/ui/background_blurred",
    "$background_scrim_visible": false,
    "animation_name": "Challenges Screen",
    "screen_visibility": "opaque"
  },

  "challenges_content": {
    "type": "panel",
    "$challenge_collection_name": "#challenge_list",
    "controls": [
      {
        "content_stack_panel": {
          "type": "stack_panel",
          "size": [ "100%", "100%" ],
          "use_new_layout": true,
          "controls": [
            {
              "header_panel@genoa_common.header": {
                "$header_image": "textures/ui/header_icons/challenges",
                "$header_text": "challenges.header"
              }
            },
            {
              "content_panel": {
                "type": "panel",
                "size": [ "100%", "fill" ],
                "controls": [
                  {
                    "main_panel@genoa_challenges.main_panel": {
                      "bindings": [
                        {
                          "binding_name": "#waiting_for_challenge_request",
                          "binding_name_override": "(not #visible)"
                        }
                      ]
                    }
                  },
                  {
                    "waiting_for_update_panel@genoa_challenges.waiting_for_update_panel": {
                      "bindings": [
                        {
                          "binding_name": "#waiting_for_challenge_request",
                          "binding_name_override": "#visible",
                          "binding_condition": "always"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "exit_name@genoa_challenges.exit_popup_panel": {
        }
      },
      {
        "global_cancel_panel": {
          "type": "input_panel",
          "layer": 55,
          "cancel_all_input": true,
          "bindings": [
            {
              "binding_name": "#cancel_input_panel",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "transition_merl_challenges_3": {
          "type": "input_panel",
          "layer": 55,
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.show_merl_challenges_3",
              "mapping_type": "pressed"
            }
          ],
          "bindings": [
            {
              "binding_name": "#oobe_transition_button_visible",
              "binding_name_override": "#visible",
              "binding_condition": "always"
            }
          ]
        }
      }
    ]
  },

  "main_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%" ], //required
    "use_new_layout": true,
    "controls": [
      {
        "pad_0": {
          "type": "panel",
          "size": [ 0, 12 ]
        }
      },
      { "fade_bars@genoa_common.fading_scroll_mask_bars": {} },
      {
        "scrolling_challenges@common.scrolling_panel": {
          "$show_background": false,
          "$scroll_fade_distance": 100.0,
          "$scrolling_content": "genoa_challenges.challenge_scrolling_content",
          "$scroll_box_touch_image_control": "genoa_common.scroll_bar_control",
          "offset": [ 0, -2 ]
        }
      }
    ]
  },

  "challenge_scrolling_content": {
    "type": "stack_panel",
    "use_new_layout": true,
    "animation_name": "Main Challenges",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "challenge_category_divider_daily@genoa_challenges.challenge_category_divider": {
          "$challenge_category_text": "#daily_category",
          "$text_binding": [
            {
              "binding_name": "$text",
              "binding_condition": "always_when_visible"
            }
          ]        
        }
      },
      {
        "finished_all_dailies_banner@genoa_challenges.finished_all_dailies_banner": {
          "bindings": [
            {
              "binding_name": "#are_all_dailies_finished",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "daily_challenges_panel_content": {
          "type": "stack_panel",
          "size": [ "100%", "100%c" ],
          "use_new_layout": true,
          "bindings": [
            {
              "binding_name": "#are_all_dailies_finished",
              "binding_name_override": "(not #visible)"
            }
          ],
          "controls": [
            {
              "time_left@genoa_challenges.time_left": {
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "offset": [ -10, 5 ],
                "bindings": [
                  {
                    "binding_name": "#time_left_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "daily_challenges_factory": {
                "type": "stack_panel",
                "use_new_layout": true,
                "size": [ 351, "100%c" ],
                "$challenge_category_collection": "#daily_challenges",
                "collection_name": "$challenge_category_collection",
                "factory": {
                  "name": "each_category",
                  "control_name": "genoa_challenges.daily_challenge_card"
                },
                "bindings": [
                  {
                    "binding_name": "#daily_challenge_collection_length",
                    "binding_name_override": "#collection_length"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "pad_2": {
          "type": "panel",
          "size": [ 0, 30 ]
        }
      },
      {
        "challenge_category_divider_tappables@genoa_challenges.challenge_category_divider": {
          "$challenge_category_text": "profile.tappables_collected_tool_tip_title"
        }
      },
      {
        "pad_3": {
          "type": "panel",
          "size": [ 0, 9 ]
        }
      },
      {
        "tappable_challenges_panel_content": {
          "type": "panel",
          "size": [ 351, "100%cm" ],
          "controls": [
            {
              "tappable_challenges_slots": {
                "type": "stack_panel",
                "use_new_layout": true,
                "size": [ 345, "100%c" ],
                "$challenge_category_collection": "#tappable_challenges",
                "collection_name": "$challenge_category_collection",
                "factory": {
                  "name": "tappable_slots",
                  "control_name": "genoa_challenges.empty_tappable_slot"
                },
                "bindings": [
                  {
                    "binding_name": "#tappable_challenge_collection_length",
                    "binding_name_override": "#collection_length",
                    "binding_condition": "once"
                  }
                ]
              }
            },
            {
              "tappable_challenges_factory": {
                "type": "stack_panel",
                "use_new_layout": true,
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "size": [ 351, "100%c" ],
                "offset": [ 3, 0 ],
                "$challenge_category_collection": "#tappable_challenges",
                "collection_name": "$challenge_category_collection",
                "factory": {
                  "name": "tappable_challenge",
                  "control_name": "genoa_challenges.tappable_challenge_card"
                },
                "bindings": [
                  {
                    "binding_name": "#tappable_challenge_collection_length",
                    "binding_name_override": "#collection_length",
                    "binding_condition": "once"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "pad_4": {
          "type": "panel",
          "size": [ 0, 30 ]
        }
      }
    ]
  },

  "challenge_category_divider@genoa_common.divider_label": {
    "$font_type": "MinecraftSeven",
    "$font_size": 18,
    "$text_offset": [ 0, -5 ],
    "$bars_offset": [ 0, 0 ],
    "$left_text_pad_size": [ 13, 0 ],
    "$right_text_pad_size": [ 4, 0 ],
    "$right_bar_pad_size": [ 13, 0 ],
    "$text_alignment": "left",
    "$text": "$challenge_category_text"
  },

  "challenges_grid": {
    "type": "grid",
    "size": [ "100%", "100%c" ],
    "$challenges_grid_dimension|default": [ 1, 3 ],
    "grid_dimensions": "$challenges_grid_dimension",
    "collection_name": "$challenge_category_collection",
    "grid_item_template": "$grid_template",
    "anchor_to": "top_middle",
    "anchor_from": "top_middle"
  },

  "placeholder_panel": {
    "type": "panel",
    "size": [ "100%", "100%c + 10px" ],
    "controls": [
      {
        "placeholder_box@genoa_common.white": {
          "size": [ 351, 114 ],
          "color": "black"
        }
      }
    ]
  },

  "waiting_for_update_panel": {
    "type": "panel",
    "controls": [
      {
        "loading_contents@genoa_common.loading_content_stack_panel": {
          "$loading_text": "challenges.waiting_for_update",
          "$loading_content_bindings": [
            {
              "binding_name": "#show_loading",
              "binding_name_override": "#visible",
              "binding_condition": "always"
            }
          ]
        }
      }
    ]
  },

  "exit_popup_panel": {
    "type": "input_panel",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.disable_reward_title_popup",
        "mapping_type": "pressed"
      }
    ],
    "bindings": [
      {
        "binding_name": "#reward_title_popup_on",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "time_left": {
    "type": "panel",
    "size": [ "100%c", 27 ],
    "controls": [
      {
        "time_left_back_panel@genoa_common.white": {
          "color": "$genoa_dark_button_color",
          "size": [ "100%c + 7px", "100%" ],
          "offset": [ -3, -3 ],
          "texture": "textures/ui/9_slice/label_simple",
          "controls": [
            {
              "time_left_panel@genoa_common.white": {
                "color": "black",
                "size": [ "100%c", 24 ],
                "controls": [
                  {
                    "time_stack": {
                      "type": "stack_panel",
                      "orientation": "horizontal",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "clock_image": {
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "size": [ "100%y", "100%" ],
                            "offset": [ 1, 0 ],
                            "type": "image",
                            "fill": true,
                            "texture": "textures/ui/timer"
                          }
                        },
                        {
                          "pad_0": {
                            "type": "panel",
                            "size": [ 6, 0 ]
                          }
                        },
                        {
                          "time_left_text": {
                            "type": "label",
                            "anchor_from": "right_middle",
                            "anchor_to": "right_middle",
                            "size": [ "default", "100%" ],
                            "text_alignment": "center",
                            "text": "#time_countdown",
                            "color": "white",
                            "override_height": 20,
                            "bindings": [
                              {
                                "binding_name": "#time_countdown",
                                "binding_condition": "always"
                              }
                            ]
                          }
                        },
                        {
                          "pad_1": {
                            "type": "panel",
                            "size": [ 5, 0 ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "empty@genoa_common.empty": {
    "size": [ "100%", 100 ]
  },

  "challenge_card": {
    "type": "panel",
    "size": [ 351, 125 ],
    "offset": [ 2, 0 ],
    "$card_content|default": "genoa_challenges.empty",
    "controls": [
      {
        "card_background": {
          "type": "image",
          "texture": "textures/ui/challenge_panel",
          "fill": true,
          "controls": [
            {
              "padded_content_panel": {
                "type": "panel",
                "size": [ "100%-20px", "100%cm+20px" ],
                "controls": [
                  {
                    "card_content@$card_content": {}
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "ongoing_daily_content@genoa_challenges.ongoing_challenge_content": {
    "animation_name": "Daily Complete Card",
    "$challenge_title": "#daily_challenge_title",
    "$challenge_title_bindings": [
      {
        "binding_name": "$challenge_title",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$challenge_description": "#daily_challenge_description",
    "$challenge_description_bindings": [
      {
        "binding_name": "$challenge_description",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$progress_string": "#daily_progress_bar_text",
    "$progress_numeric": "#daily_progress_bar_clipping",
    "$progress_bindings": [
      {
        "binding_name": "$progress_string",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      },
      {
        "binding_name": "$progress_numeric",
        "binding_name_override": "#clip_ratio",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$progress_visible_bindings": [
      {
        "binding_name": "#ongoing_daily_challenge",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$reward_button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.daily_reward_selected",
        "mapping_type": "pressed"
      }
    ],
    "$animate_reward_binding_name": "#daily_animate_reward",
    "$reward_quantity": "#daily_reward_quantity",
    "$challenge_reward_quantity_bindings": [
      {
        "binding_name": "$reward_quantity",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$reward_image": "#daily_reward_texture",
    "$reward_image_file_system": "#daily_reward_texture_file_system",
    "$challenge_reward_image_bindings": [
      {
        "binding_name": "$reward_image",
        "binding_name_override": "#texture",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      },
      {
        "binding_name": "$reward_image_file_system",
        "binding_name_override": "#texture_file_system",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$reward_title_visible": false,
    "$challenge_reward_title_overflow_bindings": [
      {
        "binding_name": "#daily_reward_title_overflow_visible",
        "binding_name_override": "#visible"
      },
      {
        "binding_type": "collection_details"
      }
    ],
    "$collect_bindings": [
      {
        "binding_name": "#daily_collect_button_visible",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$collected_bindings": [
      {
        "binding_name": "#daily_completed_button_visible",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$collect_pressed_button_name": "button.collect_daily_challenge",
    "$title_banner_bindings": []
  },

  "daily_challenge_card": {
    "type": "panel",
    "size": [ "100%", 125 ],
    "controls": [
      {
        "daily_card@genoa_challenges.challenge_card": {
          "$card_content": "genoa_challenges.ongoing_daily_content"
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#daily_challenge_visible",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ]
  },

  "ongoing_tappable_content@ongoing_challenge_content": {
    "$progress_visible_bindings": [
      {
        "binding_name": "#ongoing_tappable_challenge",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$progress_string": "#tappable_progress_bar_text",
    "$progress_numeric": "#tappable_progress_bar_clipping",
    "$progress_bindings": [
      {
        "binding_name": "$progress_string",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      },
      {
        "binding_name": "$progress_numeric",
        "binding_name_override": "#clip_ratio",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$collect_bindings": [
      {
        "binding_name": "#tappable_collect_button_visible",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$collected_bindings": [
      {
        "binding_name": "#tappable_completed_button_visible",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$collect_pressed_button_name": "button.collect_tappable_challenge",
    "$animate_reward_binding_name": "#tappable_animate_reward"
  },

  "tappable_challenge_card": {
    "type": "panel",
    "size": [ "100%", 125 ],
    "$remove_button_name": "button.remove_tappable_challenge",

    // bindings that are the same accross different tappable contents
    "$challenge_title_color": "white",
    "$challenge_title_shadow": true,
    "$challenge_title": "#tappable_challenge_title",
    "$challenge_title_bindings": [
      {
        "binding_name": "$challenge_title",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$challenge_description": "#tappable_challenge_description",
    "$challenge_description_bindings": [
      {
        "binding_name": "$challenge_description",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$reward_quantity": "#tappable_reward_quantity",
    "$challenge_reward_quantity_bindings": [
      {
        "binding_name": "$reward_quantity",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$reward_image": "#tappable_reward_texture",
    "$reward_image_file_system": "#tappable_reward_texture_file_system",
    "$challenge_reward_image_bindings": [
      {
        "binding_name": "$reward_image",
        "binding_name_override": "#texture",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      },
      {
        "binding_name": "$reward_image_file_system",
        "binding_name_override": "#texture_file_system",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$banner_background": "#tappable_banner_background",
    "$title_banner_bindings": [
      {
        "binding_name": "$banner_background",
        "binding_name_override": "#texture",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "$reward_button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.tappable_reward_selected",
        "mapping_type": "pressed"
      }
    ],
    "$reward_title_visible": false,
    "$challenge_reward_title_overflow_bindings": [
      {
        "binding_name": "#tappable_reward_title_overflow_visible",
        "binding_name_override": "#visible"
      },
      {
        "binding_type": "collection_details"
      }
    ],
    "$remove_button_bindings": [
      {
        "binding_type": "collection_details"
      }
    ],
    "bindings": [
      {
        "binding_name": "#tappable_challenge_visible",
        "binding_name_override": "#visible",
        "binding_collection_name": "$challenge_category_collection",
        "binding_type": "collection"
      }
    ],
    "controls": [
      {
        "ongoing_tappable_card@challenge_card": {
          "$remove_button_visible": true,
          "$card_content": "genoa_challenges.ongoing_tappable_content"
        }
      }
    ]
  },

  "reward": {
    "type": "input_panel",
    "size": [ 50, 50 ],
    "$reward_quantity|default": "100",
    "$reward_quantity_bindings|default": [],
    "$reward_quantity_propagate_alpha|default": false,
    "$reward_quantity_alpha_bindings|default": [],
    "$reward_alpha|default": 1.0,
    "$reward_image|default": "textures/ui/ruby",
    "$reward_image_bindings|default": [],
    "$button_mappings|default": [],
    "button_mappings": "$button_mappings",
    "$reward_title_overflow_bindings|default": [],
    "$reward_title_bindings|default": [],
    "$animate_reward_binding_name|default": "#dummy_name",
    "$fading_selection_info_overflow_name|default": "fading_selection_info_overflow",
    "$fading_selection_info_name|default": "fading_selection_info",
    "controls": [
      {
        "reward_grid_background@genoa_common.white": {
          "texture": "textures/ui/crafting_smelting_recipe_grid_none_bg",
          "controls": [
            {
              "slot_bevel@genoa_common.white": {
                "texture": "textures/ui/slot_bevel_simple",
                "controls": [
                  {
                    "reward_image@genoa_common.white": {
                      "size": [ 38, 38 ],
                      "animation_name": "Reward Icon",
                      "texture": "$reward_image",
                      "alpha": "$reward_alpha",
                      "bindings": "$reward_image_bindings"
                    }
                  },
                  {
                    "reward_quantity@genoa_common.shadow_text_panel": {
                      "anchor_from": "bottom_right",
                      "anchor_to": "bottom_right",
                      "$override_height": 20,
                      "offset": [ -6, -6 ],
                      "$text_shadow_offset": [ 4, 3 ],
                      "$text_alignment": "right",
                      "$text_binding_name": "$reward_quantity",
                      "$bindings": "$reward_quantity_bindings",
                      "propagate_alpha": "$reward_quantity_propagate_alpha",
                      "bindings": "$reward_quantity_alpha_bindings"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "$fading_selection_info_overflow_name@genoa_common.fading_selection_info": {
          // tooltip that goes off screen
          "$anchoring_to": "bottom_right",
          "$anchoring_from": "top_right",
          "$selection_info_text_offset": [ 0, -10 ],
          "$ingredient_name_panel_visible_binding": "$reward_title_overflow_bindings",
          "$reward_title_overflow_visible|default": true,
          "visible": "$reward_title_overflow_visible"
        }
      },
      {
        "$fading_selection_info_name@genoa_common.fading_selection_info": {
          // tooltip that doesn't go off screen
          "$anchoring_to": "bottom_middle",
          "$anchoring_from": "top_middle",
          "$selection_info_text_offset": [ 0, -10 ],
          "$ingredient_name_panel_visible_binding": "$reward_title_bindings",
          "$reward_title_visible|default": true,
          "visible": "$reward_title_visible"
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "$animate_reward_binding_name",
        "binding_name_override": "#selected"
      },
      {
        "binding_type": "collection_details"
      }
    ]
  },

  "progress_bar": {
    "type": "image",
    "fill": true,
    "$progress_bar_bg_size|default": [ 320, 25 ],
    "$progress_bar_size|default": [ 270, 15 ],
    "size": "$progress_bar_bg_size",
    "texture": "textures/ui/gradients/progress_bar_bg",
    "$bevel_texture|default": "textures/ui/slot_bevel_simple",
    "$progress_string|default": "4/5",
    "$progress_numeric|default": 0.2,
    "$progress_bar_texture|default": "textures/ui/challenge_progress_bar",
    "$progress_bar_bindings|default": [], // specifies bindings progress string & numeric value
    "controls": [
      {
        "fill_bar_progress": {
          "size": "$progress_bar_size",
          "type": "image",
          "fill": true,
          "texture": "$progress_bar_texture",
          "clip_direction": "left",
          "clip_ratio": "$progress_numeric",
          "bindings": "$progress_bar_bindings",
          "offset": [ 5, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle"
        }
      },
      {
        "progress_text@genoa_common.shadow_text_panel": {
          "$override_height": 22,
          "$text_shadow_offset": [ 0, -2 ],
          "$text_alignment": "center",
          "$text_binding_name": "$progress_string",
          "$bindings": "$progress_bar_bindings"
        }
      },
      {
        "bevel": {
          "type": "image",
          "fill": true,
          "texture": "$bevel_texture"
        }
      }
    ]
  },

  "ongoing_challenge_content": {
    "type": "stack_panel",
    "size": [ 331, 100 ],
    "$remove_button_visible|default": false,
    "$remove_button_bindings|default": [],
    "$remove_button_name|default": "",
    "$reward_panel_visible|default": true,
    "$reward_panel_bindings|default": [],
    "$challenge_title|default": "Challenge Title",
    "$challenge_title_color|default": "white",
    "$challenge_title_shadow|default": false,
    "$challenge_title_shadow_color|default": "$challenges_text_shadow_color",
    "$challenge_title_bindings|default": [],
    "$challenge_description|default": "Challenge description",
    "$challenge_description_bindings|default": [],
    "$progress_bindings|default": [], // bindings for progress might be different if this content control is used for tappables, dailies, or as subchallenge of career cards
    "$reward_button_mappings|default": [], // button mappings for reward box might be different if this content control is used for tappables, dailies, or as subchallenge of career cards
    // these reward bindings might be different if this content control is used for tappables, dailies, or as subchallenge of career cards
    "$challenge_reward_quantity_bindings|default": [],
    "$challenge_reward_image_bindings|default": [],
    "$challenge_reward_title_overflow_bindings|default": [],
    "$challenge_reward_title_bindings|default": [],
    "$collect_left_padding_visible|default": false, // show or hide extra padding for when this content is used as a subchallenge content
    "$collect_bindings|default": [],
    "$collected_bindings|default": [],
    "$collect_pressed_button_name|default": "",
    "$progress_visible_bindings|default": [],
    "controls": [
      {
        "detail_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "challenge_tier": {
                "anchor_to": "top_middle",
                "anchor_from": "top_middle",
                "size": [ 40, 40 ],
                "type": "image",
                "fill": true,
                "texture": "textures/ui/header_icons/challenges",
                "bindings": "$title_banner_bindings"
              }
            },
            {
              "text_and_details_panel": {
                "type": "stack_panel",
                "size": [ "fill", "100%" ],
                "controls": [
                  {
                    "title_text": {
                      "type": "label",
                      "size": [ 235, 20 ],
                      "override_height": 20,
                      "font_type": "MinecraftTen",
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "color": "$challenge_title_color",
                      "shadow": "$challenge_title_shadow",
                      "shadow_color": "$challenge_title_shadow_color",
                      "text": "$challenge_title",
                      "bindings": "$challenge_title_bindings"
                    }
                  },
                  {
                    "pad_0": {
                      "type": "panel",
                      "size": [ "100%", 5 ]
                    }
                  },
                  {
                    "description_text_panel": {
                      "type": "panel",
                      "size": [ "fill", "100%c" ],
                      "controls": [
                        {
                          "description_text": {
                            "type": "label",
                            "offset": [ 0, -5 ],
                            "size": [ 235, 40 ],
                            "override_height": 16,
                            "font_type": "smooth",
                            "anchor_from": "top_left",
                            "anchor_to": "top_left",
                            "color": "white",
                            "text": "$challenge_description",
                            "bindings": "$challenge_description_bindings"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "pad_1": {
                      "type": "panel",
                      "size": [ "100%", "fill" ]
                    }
                  }
                ]
              }
            },
            {
              "reward_panel": {
                "type": "panel",
                "size": [ "100%cm", 50 ],
                "visible": "$reward_panel_visible",
                "bindings": "$reward_panel_bindings",
                "controls": [
                  {
                    "reward@genoa_challenges.reward": {
                      "animation_name": "Reward Complete",
                      "offset": [ -10, 0 ],
                      "$button_mappings": "$reward_button_mappings",
                      "$reward_quantity_bindings": "$challenge_reward_quantity_bindings",
                      "$reward_image_bindings": "$challenge_reward_image_bindings",
                      "$reward_title_overflow_bindings": "$challenge_reward_title_overflow_bindings",
                      "$reward_title_bindings": "$challenge_reward_title_bindings"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "progress_collect_panel": {
          "type": "panel",
          "controls": [
            {
              "progress_panel": {
                "type": "panel",
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "size": [ "100%", "100%c" ],
                "offset": [ 0, -5 ],
                "controls": [
                  {
                    "tappable_progress_panel": {
                      "type": "panel",
                      "size": [ "100%", 40 ],
                      "visible": "$remove_button_visible",
                      "controls": [
                        {
                          "progress_bar@genoa_challenges.progress_bar": {
                            "size": [ "100%-50px", 25 ],
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "$progress_bar_bindings": "$progress_bindings",
                            "$progress_bar_size": [ 270, 15 ]
                          }
                        },
                        {
                          "remove_button@remove_button": {
                            "anchor_from": "top_right",
                            "anchor_to": "top_right",
                            "offset": [ -10, 0 ],
                            "$pressed_button_name": "$remove_button_name",
                            "bindings": "$remove_button_bindings"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "progress_bar@genoa_challenges.progress_bar": {
                      "size": [ "100%-10px", 25 ],
                      "offset": [ 0, -10 ],
                      "anchor_from": "left_middle",
                      "anchor_to": "left_middle",
                      "visible": "(not $remove_button_visible)",
                      "$progress_bar_bindings": "$progress_bindings",
                      "$progress_bar_size": [ 310, 15 ]
                    }
                  }
                ],
                "bindings": "$progress_visible_bindings"
              }
            },
            {
              "collect_panel": {
                "type": "panel",
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "offset": [ 0, -6 ],
                "size": [ "100%-10px", 35 ],
                "controls": [
                  {
                    "collect": {
                      "type": "panel",
                      "animation_name": "Collect Button Loop",
                      "bindings": "$collect_bindings",
                      "controls": [
                        {
                          "collect_button@genoa_challenges.collect_button": {
                            "$pressed_button_name": "$collect_pressed_button_name",
                            "bindings": [
                              {
                                "binding_type": "collection_details"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "collected@genoa_challenges.collected_button": {
                      "bindings": "$collected_bindings"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

